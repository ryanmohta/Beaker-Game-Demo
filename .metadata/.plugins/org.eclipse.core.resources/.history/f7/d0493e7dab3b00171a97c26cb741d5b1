package gameEngine;

import javafx.application.Application;
import javafx.scene.Scene;
import javafx.stage.Stage;

public class Game extends Application {
	private boolean mode; // true = custom, false = express
	private int numFailed; //number of drops that hit the floor
	private int score; //the number of drops that successfully land in the beaker

	public void setMode(boolean newmode){
		mode = newmode;
	}

	public boolean getMode() {
		return mode;
	}

	public void setScore(int newscore) {
		if (newscore >= 0) 
			score = newscore;
	}

	public int getScore() {
		return score;
	}

	public boolean isGameOver() {
		if (numFailed >= 5)
			return true;
		return false;
	}

	@Override
	//GUI Elements including a Stage, Scene, Slider, and Label (which we'll add later)
	public void start(Stage stage) {
		
		stage.show();
		
	}
}
